	<script>
		// Kiểm tra xem font đã load chưa
		document.addEventListener('DOMContentLoaded', function() {
			var testIcon = document.createElement('i');
			testIcon.className = 'fa fa-camera';
			testIcon.style.visibility = 'hidden';
			document.body.appendChild(testIcon);

			setTimeout(function() {
				var style = window.getComputedStyle(testIcon);
				if(style.fontFamily.indexOf('FontAwesome') === -1) {
					console.error('Font Awesome chưa load!');
					// Load fallback từ CDN
					var link = document.createElement('link');
					link.href = 'https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css';
					link.rel = 'stylesheet';
					document.head.appendChild(link);
				}
				document.body.removeChild(testIcon);
			}, 100);
		});

		//script sử dụng sweep alert
		$(function (){
			var message = '@TempData["success"]';
			if (message) {
				Swal.fire({
