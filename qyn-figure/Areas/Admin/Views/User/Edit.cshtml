@model qyn_figure.Models.AppUserModel
@{
	ViewData["Title"] = "Chỉnh sửa user";
}

<h3>@ViewData["Title"]</h3>
<div class="col-md-9">
	<form asp-action="Edit" asp-route-UserId="@Model.Id">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<div class="form-group">
			<label>Username</label>
			<input asp-for="@Model.UserName" readonly class="form-control" />
			<span asp-validation-for="@Model.UserName" class="text-danger"></span>
		</div>

		

		<div class="form-group">
			<label>Email</label>
			<input asp-for="@Model.Email" class="form-control" />
			<span asp-validation-for="@Model.Email" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label>Số điện thoai</label>
			<input asp-for="@Model.PhoneNumber" class="form-control" />
			<span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label>Password</label>
			<input asp-for="@Model.PasswordHash" class="form-control" />
			<span asp-validation-for="@Model.PasswordHash" class="text-danger"></span>
		</div>
		

		<div class="form-group">
			<button class="btn btn-primary">Chỉnh sửa</button>
		</div>
	</form>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}